<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
			integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/admin-style.css" />
		<title>Admin Page</title>
	</head>

	<body>
		<div class="background">
			<img
				src="/images/background-front.jpeg"
				class="img-fluid"
				id="bg"
				alt="Responsive image"
			/>
		</div>

		<!-- Sidebar -->
		<div id="sidebar">
			<header>
				<h3>Admin</h3>
			</header>

			<ul class="nav">
				<li>
					<a href="#">Logo Manage</a>
				</li>
				<li>
					<a href="#">Users Info</a>
				</li>
				<li>
					<a href="#">Users Info</a>
				</li>
			</ul>
		</div>

		<%- include('./parts/navbar'); -%>
		<div class="content">
			SOME DATA <%- include('./parts/user_form'); -%>
			<div class="col-md-12">
				<div id="user_list">
					<% elem.forEach( x => { %>
					<form id="user_info" class="card user_info" style="margin-top:30px">
						<div class="card-body">
							<div class="form-group label-input">
								<label for="<%=x._id %>">id: </label>
								<input
									readonly
									name="id"
									style="border: none;"
									class="card-field id_name"
									type="text"
									id="<%=x._id
									%>"
									value="<%=x.id %>"
								/>
							</div>
							<div class="form-group label-input">
								<label for="<%=x.role%>">role: </label>
								<input
									readonly
									name="role"
									class="card-field"
									type="text"
									id="<%=x.role %>"
									value="<%=x.role %>"
								/>
							</div>
							<div class="form-group label-input">
								<label for="<%=x.name %>">name: </label>
								<input
									name="name"
									class="card-field"
									type="text"
									id="<%=x.name %>"
									value="<%=x.name %>"
								/>
							</div>
							<div class="form-group label-input">
								<label for="<%=x.email %>">email: </label>
								<input
									name="email"
									class="card-field"
									type="text"
									id="<%=x.email %>"
									value="<%=x.email %>"
								/>
							</div>

							<div class="form-group label-input">
								<label for="<%=x.dietary%>">dietary: </label>
								<input
									name="dietary"
									class="card-field"
									type="text"
									id="<%=x.dietary %>"
									value="<%=x.dietary %>"
								/>
							</div>
							<div class="form-group label-input">
								<label for="<%=x.prefer_food%>">prefer_food: </label>
								<input
									name="prefer"
									class="card-field"
									type="text"
									id="<%=x.prefer_food %>"
									value="<%=x.prefer_food %>"
								/>
							</div>
							<!-- <input type="submit" value="Update" form="user_info"> -->
						</div>
						<div class="d-flex flex-row-reverse">
							<div style="margin-right: 30px;">
								<button type="submit" class="btn btn-info update" name="update">
									Update account
								</button>
							</div>
							<div style="margin-right: 30px;">
								<button
									type="submit"
									class="btn btn-danger delete"
									name="delete"
								>
									Delete account
								</button>
							</div>
						</div>
						<br />
					</form>

					<% }) ; %>
				</div>
			</div>
		</div>

		<footer class="footer">
			<nav class="navbar footer fixed-bottom navbar-light bg-light">
				FSWD Agile Project Â© 2020
			</nav>
		</footer>
	</body>
	<%- include('./parts/jq'); -%>
	<script type="text/javascript" src="/Src/admin_ajax.js"></script>
</html>
